    <hr />
    <div class="feed">

<% todos.forEach(shows=> { %>
    <div class="content_img">
        <%if(shows.image !==null){%>
            <a href="/showdetail/<%= shows.id %>">

                <img src="<%= shows.image.medium %>" alt="<%= shows.name %>">
                <div>
                    <%= shows.name %>
                </div>
            </a>

            <%}else{%>
                <%null%>
                    <% }%>
    </div>
    <% }) %>
        </div>

</body>

