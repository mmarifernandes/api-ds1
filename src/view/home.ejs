<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>

<body>
        <%- include('includes/navbar') %>

    <div  style="text-align: center;">
    <h3>Aperte aqui :)</h3>
    <form action="/detalhar" method="POST" class="search-bar">
        <input type="search" name="ShowName" pattern=".*\S.*" required>
        <button class="search-btn" type="submit">
            <span>Search</span>
        </button>
        <br>
        <br>
    </form>
</div>
    <hr />
    <div class="feed">

<% todos.forEach(shows=> { %>
    <div class="content_img">
        <%if(shows.image !==null){%>
            <a href="/showdetail/<%= shows.id %>">

                <img src="<%= shows.image.medium %>" alt="<%= shows.name %>">
                <div>
                    <%= shows.name %>
                </div>
            </a>

            <%}else{%>
                <%null%>
                    <% }%>
    </div>
    <% }) %>
        </div>

</body>

</html>